<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FIAP.Global_ImpactWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/cadastro.css" />
    <link rel="stylesheet" href="~/css/donate.css" />
    <link rel="shortcut icon"
          href="~/ong_1.png"
          type="image/x-icon" />

</head>
<body>
    <header>
        <nav style="background-color:seagreen" class="navbar navbar-expand-lg navbar-nav">
            <img src="~/restaurante.png" style="width:50px;border:solid;border-radius:30px;border-color:darkgray;padding:5px;margin-left:1.5rem"/>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <a class="navbar" style="text-decoration:none;color:seagreen" asp-action="Index" asp-controller="Home">ONG's Unidas</a>
                
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item">
                        <a style="color:seagreen" class="nav-link" href="#funcionalidade">Funcionalidades</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a style="color:seagreen" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Menu</a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-action="Cadastrar" asp-controller="ONGs">Cadastre uma ONG</a>
                            <a asp-action="IndexAdmin" asp-controller="ONGs" class="dropdown-item">Configurações ONG</a>

                        </div>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0">
                    <a asp-action="Index" asp-controller="ONGs" style="margin-left:0.5rem;background-color:purple" class="btn  my-2 my-sm-0">Veja as ONG's'</a>
                </form>
            </div>
        </nav>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ONG's Unidas- <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

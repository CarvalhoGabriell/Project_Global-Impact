@model List<UserONG>

@{
    ViewData["Title"] = "Listagem das ONG'S";
}

<div class="donate-background"></div>

<mensage-sucess mensagem="@TempData["msg"]"></mensage-sucess>

<div class="search-input">
    <form>
        <div class="mb-3 margin search-input-container">
            <input type="text" class="form-control" placeholder="Pesquisar ONG..." name="nomeBuscado" id="nomeBuscado">

            <input style="margin-left:1rem" type="submit" class="btn btn-primary" value="Pesquisar" />
        </div>

        <div class="search-input-subtitle">
            <p>
                Selecione alguma das ONGs registradas na nossa plataforma para
                fazer a sua doação... ela pode salvar vidas
            </p>
        </div>
    </form>
</div>

@foreach (var itens in Model)
{

    <div class="row row-cols-1 row-cols-md-2 g-4">
        <div class="col-md-6">
            <div class="card">
                <img src="~/img_home.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <strong class="d-inline-block mb-2 text-success">@itens.Nome</strong>
                    <p class="card-text mb-auto font-weight-bold">Breve Descrição: @itens.Descricao</p>
                    <span>Site Oficial: <a href="#"> @itens.LinkSite</a></span>
                    <p class="text-black-50">Email: @itens.Email</p>
                    <p class="badge badge-success"> + 200 Doações</p>
                </div>
                <div class="align-content-lg-stretch" style="margin-bottom:0.5rem;margin-left:5.5rem">

                    <!-- <button onclick="" style="width:10rem" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">Doar</button>  -->
                    <a class="btn" asp-action="Detalhes" asp-route-id="@itens.CodigoId" style="background-color: seagreen; width: 10rem">Detalhes</a>
                    <a class="btn btn-primary" style="margin-left: 0.5rem; width: 10rem" asp-action="Doar" asp-controller="Doacao">Fazer Doação</a>
                </div>
            </div>
        </div>

    </div>
}

